{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2020",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$server": ["src/lib/server"],
      "$server/*": ["src/lib/server/*"],
      "$stores": ["src/stores"],
      "$stores/*": ["src/stores/*"],
      "$types": ["src/types"],
      "$types/*": ["src/types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "src/types/**/*.d.ts",
    "svelte.config.js",
    "vite.config.ts",
    "postcss.config.ts",
    "tailwind.config.ts"
  ]
}