{
  "tasks": {
    "dev": "deno run -A --watch=static/,src/ npm:vite dev",
    "build": "npx prisma generate && npm:vite build",
    "preview": "npm:vite preview"
  },
  "imports": {
    "@prisma/client": "npm:@prisma/client",
    "@sveltejs/kit": "npm:@sveltejs/kit",
    "vite": "npm:vite"
  },
  "compilerOptions": {
    "lib": ["dom", "deno.ns", "dom.iterable"],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "semiColons": false
  }
}
